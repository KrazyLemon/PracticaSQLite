<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <TextView
                    android:id="@+id/id_contact_txt"
                    android:layout_width="35dp"
                    android:layout_height="59dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="328dp"
                    android:layout_marginBottom="13dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="34sp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/nombre_contact_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Nombre"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/id_contact_txt"
                    app:layout_constraintTop_toTopOf="@+id/id_contact_txt" />

                <TextView
                    android:id="@+id/celular_contact_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Telefono"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/correo_contact_txt"
                    app:layout_constraintTop_toBottomOf="@+id/correo_contact_txt" />

                <TextView
                    android:id="@+id/correo_contact_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/nombre_contact_txt"
                    app:layout_constraintTop_toBottomOf="@+id/nombre_contact_txt" />

                <ImageButton
                    android:id="@+id/delete_btn"
                    android:layout_width="42dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#E91E63"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_btn"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/ic_delete"
                    app:tint="#FFFFFF" />

                <ImageButton
                    android:id="@+id/edit_btn"
                    android:layout_width="41dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#2196F3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_edit"
                    app:tint="#FFFFFF" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>